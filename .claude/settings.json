{
  "hooks": {
    "Stop": [
      {
        "description": "掃描進度 + 更新 Dashboard + 自動開啟/刷新瀏覽器",
        "hooks": [
          {
            "type": "command",
            "command": "ROOT=$(git rev-parse --show-toplevel) && node \"$ROOT/dashboard/scripts/refresh.js\"",
            "timeout": 15,
            "statusMessage": "更新 Dashboard..."
          }
        ]
      },
      {
        "description": "檢查 CLAUDE.md 數字是否與實際檔案一致",
        "hooks": [
          {
            "type": "command",
            "command": "ROOT=$(git rev-parse --show-toplevel) && node \"$ROOT/.claude/hooks/claude-md-check.js\"",
            "timeout": 5,
            "statusMessage": "檢查 CLAUDE.md 同步..."
          }
        ]
      }
    ]
  }
}
